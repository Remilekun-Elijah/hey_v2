<section class="contact__us">
 <div class="container pb-4 pt-5">
  <div class="row justify-content-between">
   <div class="col-md-5">
    <h2 class="text-cente text-bold text-white grotesk">Reach Us</h2>
    <p class="gilroy text-white">Fill up the form and our Team will get back to you within 24 hours.</p>
    <img src="/images/reach_us.png" alt="" class="my-4">
    <div class="means">
     <p class="gilroy mb-4 text-white"><img src="/images/sms.svg" alt="" class="me-3">hello@heylogistic.com.ng</p>
     <p class="gilroy mb-4 text-white"><img src="/images/call.svg" alt="" class="me-3">+234 904 560 4669</p>
     <p class="gilroy mb-4 text-white"><img src="/images/location.svg" alt="" class="me-3">Agungi, Ajah Lagos, Nigeria</p>
    </div>
   </div>

   <div class="col-md-6">
    <form action="/" class="bg-white">
     <div class="form-group position-relative pt-2">
      <label for="name" class="gilroy text-blue position-absolute">Your Name</label>
      <input type="text" class="form-control" id="name">
     </div>
     <div class="form-group position-relative pt-2">
      <label for="email" class="gilroy text-blue  position-absolute">Email Address</label>
      <input type="email" class="form-control" id="email">
     </div>
     <div class="form-group position-relative pt-2">
      <label for="phone" class="gilroy text-blue bg-white px-1 position-absolute">Phone Number</label>
      <input type="text" class="form-control" id="phone">
     </div>
     <div class="form-group position-relative pt-2">

      <label for="message" class="gilroy text-blue bg-white px-1 position-absolute">Your Message</label>
      <textarea class="form-control" id="message" rows="8"></textarea>
     </div>

     <div class="d-flex justify-content-end mt-4">
      <button type="submit" class="btn btn-blue px-5">Send Message</button>
     </div>
    </form>
   </div>
  </div>
 </div>
</section>